// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// schema.prisma
model Message {
  id       Int      @id 
  text     String
  sender   String
  createdAt DateTime @default(now()) // You can add timestamps
}